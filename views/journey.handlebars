<div class="text-center blog-container mx-64">
  <h2 class="text-4xl text-shadow color-mine" id="showing">{{journey_title}}</h2>
  <img class="mx-auto rounded-2xl my-5 text-shadow"src="/images/journeyPic.avif" alt="a hero image" style="width:30%">
  <p class="text-2xl">Type of Journey: {{vacation_type}} </p>
  <p class="text-2xl">Location: {{location}}</p> 
  <p class="text-2xl">{{content}}</p>
  <p class="text-2xl">Created by <span class="color-mine text-shadow" id="showing">{{user.username}}</span></p>
</div>
<div class="text-center blog-container mt-5 mx-64">
                <h3 class="text-2xl color-mine font-bold text-shadow">Comments:</h3>
                {{#each comments as |comment| }}
                    <div>
                        <p class="text-xl">{{comment.comment_text}} ~ <span class="text-lg">By <span class="color-mine text-shadow" id="showing">{{comment.user.username}}</span></span></p>
                    </div>
                {{/each}}
            </div>

{{#if logged_in}}
{{> comment-form}}
{{else}}
<div class="text-center mt-5 mx-64 text-shadow blog-container">
    <p class="text-2xl">Do you want to leave a comment?</p>
    <p class="text-2xl my-5"><a href="/login" class="color-mine text-3xl" id="showing" style="border:solid 4px #99f2cd; border-radius: 20px; padding: 6px 20px;">Sign-up for free</a></p>
</div>

{{/if}}

{{#if logged_in}}
<script src="/js/comment.js"></script>
{{/if}}